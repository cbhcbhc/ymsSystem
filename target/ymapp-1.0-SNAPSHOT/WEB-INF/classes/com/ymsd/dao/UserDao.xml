<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ymsd.dao.UserDao">

    <resultMap type="com.ymsd.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uname" column="uname" jdbcType="VARCHAR"/>
        <result property="upwd" column="upwd" jdbcType="VARCHAR"/>
        <result property="utell" column="utell" jdbcType="VARCHAR"/>
        <result property="ustate" column="ustate" jdbcType="INTEGER"/>
        <result property="uintegral" column="uintegral"/>
        <result property="urole" column="urole" jdbcType="VARCHAR"/>
        <result property="token" column="token" jdbcType="VARCHAR"/>
        <result property="jurisdiction" column="jurisdiction"></result>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, uname, upwd, utell, ustate, uintegral, urole,token
        from user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, uname, upwd, utell, ustate, uintegral, urole,token,jurisdiction
        from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uname != null and uname != ''">
                and uname = #{uname}
            </if>
            <if test="upwd != null and upwd != ''">
                and upwd = #{upwd}
            </if>
            <if test="utell != null and utell != ''">
                and utell = #{utell}
            </if>
            <if test="ustate != null">
                and ustate = #{ustate}
            </if>
            <if test="uintegral != null">
                and uintegral = #{uintegral}
            </if>
            <if test="urole != null and urole != ''">
                and urole = #{urole}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
            <if test="jurisdiction != null and jurisdiction != ''">
                and jurisdiction = #{jurisdiction}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uname != null and uname != ''">
                and uname = #{uname}
            </if>
            <if test="upwd != null and upwd != ''">
                and upwd = #{upwd}
            </if>
            <if test="utell != null and utell != ''">
                and utell = #{utell}
            </if>
            <if test="ustate != null">
                and ustate = #{ustate}
            </if>
            <if test="uintegral != null">
                and uintegral = #{uintegral}
            </if>
            <if test="urole != null and urole != ''">
                and urole = #{urole}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user(uname, upwd, utell, ustate, uintegral, urole,token,jurisdiction)
        values (#{uname}, #{upwd}, #{utell}, #{ustate}, #{uintegral}, #{urole},#{token},#{jurisdiction})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user(uname, upwd, utell, ustate, uintegral, urole)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.uname}, #{entity.upwd}, #{entity.utell}, #{entity.ustate}, #{entity.uintegral}, #{entity.urole})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user(uname, upwd, utell, ustate, uintegral, urole)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uname}, #{entity.upwd}, #{entity.utell}, #{entity.ustate}, #{entity.uintegral}, #{entity.urole})
        </foreach>
        on duplicate key update
        uname = values(uname),
        upwd = values(upwd),
        utell = values(utell),
        ustate = values(ustate),
        uintegral = values(uintegral),
        urole = values(urole)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="uname != null and uname != ''">
                uname = #{uname},
            </if>
            <if test="upwd != null and upwd != ''">
                upwd = #{upwd},
            </if>
            <if test="utell != null and utell != ''">
                utell = #{utell},
            </if>
            <if test="ustate != null">
                ustate = #{ustate},
            </if>
            <if test="uintegral != null">
                uintegral = #{uintegral},
            </if>
            <if test="urole != null and urole != ''">
                urole = #{urole},
            </if>
            <if test="token != null and token != ''">
                token = #{token}
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where id = #{id}
    </delete>


    <!-- queryUserByUtell   -->
    <select id="queryUserByUtell" resultType="com.ymsd.entity.User">
        select * from user where utell = #{utell}
    </select>

    <!--  queryUserByPWD  -->
    <select id="queryUserByPWD" resultType="com.ymsd.entity.User">
        select * from user where utell = #{utell} and upwd = #{upwd}
    </select>

    <!--  queryUserByToken  -->
    <select id="queryUserByToken" resultType="com.ymsd.entity.User">
        select * from user where token = #{token}
    </select>

    <!-- queryUserByLimit   -->
    <select id="queryUserByLimit" resultType="com.ymsd.entity.User">
        select * from user limit #{start},#{limit}
    </select>

    <!--  queryCount  -->
    <select id="queryCount" resultType="java.lang.Long">
        select count(id) from user
    </select>
</mapper>

