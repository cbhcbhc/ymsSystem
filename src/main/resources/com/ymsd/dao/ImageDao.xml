<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ymsd.dao.ImageDao">

    <resultMap type="com.ymsd.entity.Image" id="ImageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="ititle" column="ititle" jdbcType="VARCHAR"/>
        <result property="iurl" column="iurl" jdbcType="VARCHAR"/>
        <result property="itype" column="itype" jdbcType="VARCHAR"/>
        <result property="imsg" column="imsg" jdbcType="VARCHAR"/>
        <result property="istate" column="istate" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ImageMap">
        select
          id, ititle, iurl, itype, imsg, istate
        from image
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ImageMap">
        select
          id, ititle, iurl, itype, imsg, istate
        from image
        limit #{start}, #{limit}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from image
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="ititle != null and ititle != ''">
                and ititle = #{ititle}
            </if>
            <if test="iurl != null and iurl != ''">
                and iurl = #{iurl}
            </if>
            <if test="itype != null and itype != ''">
                and itype = #{itype}
            </if>
            <if test="imsg != null and imsg != ''">
                and imsg = #{imsg}
            </if>
            <if test="istate != null">
                and istate = #{istate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into image(ititle, iurl, itype, imsg, istate)
        values (#{ititle}, #{iurl}, #{itype}, #{imsg}, #{istate})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into image(ititle, iurl, itype, imsg, istate)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.ititle}, #{entity.iurl}, #{entity.itype}, #{entity.imsg}, #{entity.istate})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into image(ititle, iurl, itype, imsg, istate)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.ititle}, #{entity.iurl}, #{entity.itype}, #{entity.imsg}, #{entity.istate})
        </foreach>
        on duplicate key update
        ititle = values(ititle),
        iurl = values(iurl),
        itype = values(itype),
        imsg = values(imsg),
        istate = values(istate)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update image
        <set>
            <if test="ititle != null and ititle != ''">
                ititle = #{ititle},
            </if>
            <if test="iurl != null and iurl != ''">
                iurl = #{iurl},
            </if>
            <if test="itype != null and itype != ''">
                itype = #{itype},
            </if>
            <if test="imsg != null and imsg != ''">
                imsg = #{imsg},
            </if>
            <if test="istate != null">
                istate = #{istate},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from image where id = #{id}
    </delete>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ImageMap">
        select
        id, ititle, iurl, itype, imsg,istate
        from ymapp.image
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="ititle != null and ititle != ''">
                and ititle = #{ititle}
            </if>
            <if test="iurl != null and iurl != ''">
                and iurl = #{iurl}
            </if>
            <if test="itype != null and itype != ''">
                and itype = #{itype}
            </if>
            <if test="imsg != null and imsg != ''">
                and imsg = #{imsg}
            </if>
            <if test="istate != null and istate != ''">
                and istate = #{istate}
            </if>
        </where>
    </select>

    <!-- queryCount   -->
    <select id="queryCount" resultType="java.lang.Long">
        select count(*) from image
    </select>
</mapper>

